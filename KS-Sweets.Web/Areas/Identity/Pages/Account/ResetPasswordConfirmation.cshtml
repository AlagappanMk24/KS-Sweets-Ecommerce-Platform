@page
@model ResetPasswordConfirmationModel
@{
    // Title clearly states the success of the action
    ViewData["Title"] = "Password Successfully Reset";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-body text-center p-md-5 p-4">

                    @* Main Icon: Checkmark (indicating success) *@
                    <i class="bi bi-shield-lock-fill text-success display-2 mb-4"></i>

                    <h1 class="display-5 fw-bold text-dark mb-3">
                        @ViewData["Title"]
                    </h1>

                    @* Primary Instruction Highlight *@
                    <div class="alert alert-success bg-light border-0 p-4 rounded-3 mb-4">
                        <p class="lead fw-medium mb-0">
                            Your password has been successfully updated and secured.
                        </p>
                    </div>

                    <p class="fs-5 text-secondary">
                        You can now use your new password to access your account. Click the button below to proceed to the login page.
                    </p>

                    <hr class="my-5">

                    @* Secondary Actions Section *@
                    <h3 class="h5 text-muted mb-3">Ready to Continue?</h3>
                    <p class="text-sm mb-4">
                        You are all set. Time to sign in and enjoy **Sweets**!
                    </p>

                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">

                        @* 1. Go to Login Button (Main Action) *@
                        <a asp-page="./Login" class="btn btn-lg btn-success shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Click Here to Log In
                        </a>

                        @* 2. Go to Home/Dashboard (Optional secondary action) *@
                        <a asp-page="/Index" class="btn btn-lg btn-outline-secondary shadow-sm">
                            <i class="bi bi-house-door-fill me-2"></i> Go to Homepage
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>