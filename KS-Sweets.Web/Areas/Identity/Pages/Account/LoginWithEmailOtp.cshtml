@page
@model LoginWithEmailOtpModel
@{
    ViewData["Title"] = "Verify Your Email";
}

<div class="login-container">
    <div class="login-wrapper">
        <!-- LEFT PANEL -->
        <div class="left-panel">
            <div class="left-content text-center">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div>
                        <h2 class="title">Verify Your Email</h2>
                        <p class="subtitle">We've sent a 6-digit code to</p>
                        <p class="fw-bold fs-5 text-dark mb-4">
                            @Model.Email
                        </p>
                    </div>
                    <div class="logo-box ms-3">
                        <img src="~/images/ks-sweets.jpg" class="login-logo" alt="KS Sweets Logo" />
                    </div>
                </div>
                @if (TempData["ResentMessage"] != null)
                {
                    <div class="alert alert-success text-center mb-3"
                         style="border-radius: 10px; padding: 10px; font-weight: 600;">
                        @TempData["ResentMessage"]
                    </div>
                }
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="otp-inputs">
                        @for (int i = 0; i < 6; i++)
                        {
                            <input type="text" class="otp-box" maxlength="1"
                                   asp-for="@Model.Input.OtpDigits[i]" autocomplete="off" />
                        }
                    </div>

                    <button type="submit" class="btn btn-login w-100 mt-3">Verify & Continue</button>
                </form>

                <div class="mt-4">
                    <p class="text-muted">
                        Didn't receive the code?
                        @* <a asp-page-handler="Resend" class="fw-bold" style="color: var(--peach)">Resend</a> *@
                        <form method="post" asp-page-handler="Resend" class="d-inline">
                            <button type="submit"
                                    class="fw-bold"
                                    style="color: var(--peach); background:none; border:none; padding:0; cursor:pointer;">
                                Resend
                            </button>
                        </form>
                    </p>
                    <a href="@Url.Page("./Login")" class="text-muted">
                        Back to Login
                    </a>
                </div>
            </div>
        </div>

        <!-- RIGHT PANEL - SAME AS LOGIN -->
        <div class="right-panel">
            <div class="promo-container">
                <div class="promo-badge">NEW ARRIVAL</div>
                <img class="promo-img"
                     src="https://images.unsplash.com/photo-1555507036-ab1f4038808a?w=800&q=80" />
                <div class="promo-content">
                    <h3 class="promo-title">Try Our New Chocolate Almond Croissant!</h3>
                    <p class="promo-text">
                        Indulge in the perfect harmony of rich chocolate and toasted almonds,
                        wrapped in our buttery, flaky croissant. A treat you won't forget!
                    </p>
                    <a href="/" class="promo-home">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --peach: #ff8c5a;
        --peach-hover: #ff6b35;
        --text-dark: #2d1b0f;
        --cream: #fff7ed;
    }

    body {
        background: var(--cream);
        font-family: "Segoe UI", sans-serif;
    }

    .otp-inputs {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin: 30px 0;
    }

    .otp-box {
        width: 64px;
        height: 72px;
        text-align: center;
        font-size: 1.5rem;
        border: 2.5px solid #f3e8e2;
        border-radius: 16px;
        transition: all 0.3s;
    }

        .otp-box:focus {
            border-color: var(--peach);
            box-shadow: 0 0 0 5px rgba(255, 140, 90, 0.2);
            outline: none;
        }

    /* Reuse all other styles from Login */
    .login-container {
        max-width: 1250px;
        margin: 40px auto;
        padding: 20px;
    }

    .login-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        background: #fff;
        border-radius: 26px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(255, 150, 100, 0.18);
    }

    .left-panel {
        padding: 60px 55px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .title {
        font-size: 34px;
        font-weight: 700;
        color: var(--text-dark);
    }

    .subtitle {
        color: #777;
        margin-top: 8px;
        font-size : 18px;
    }


    .logo-box {
        width: 85px;
        height: 85px;
        border-radius: 50%;
        overflow: hidden;
        flex-shrink: 0;
        box-shadow: 0 5px 15px rgba(255, 140, 90, 0.25);
        border: 3px solid #ffe5d6;
    }

    .login-logo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Login Button */
    .btn-login {
        padding: 14px;
        background: var(--peach);
        color: white;
        border-radius: 14px;
        font-weight: 600;
        border: none;
        box-shadow: 0 8px 20px rgba(255, 120, 70, 0.35);
    }

        .btn-login:hover {
            background: var(--peach-hover);
            transform: translateY(-2px);
        }

    /* RIGHT PANEL */
    .right-panel {
        position: relative;
        overflow: hidden;
    }

    /* Right-side card */
    .promo-container {
        width: 100%;
        height: 100%;
        position: relative;
    }

    /* MORNING RISE Badge */
    .promo-badge {
        position: absolute;
        top: 30px;
        left: 30px;
        background: white;
        color: var(--peach);
        padding: 10px 24px;
        font-weight: 700;
        border-radius: 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        z-index: 10;
    }

    /* Background bakery image */
    .promo-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Promo content card */
    .promo-content {
        position: absolute;
        bottom: 40px;
        left: 40px;
        right: 40px;
        padding: 26px;
        background: rgba(255, 255, 255, 0.92);
        border-radius: 20px;
        backdrop-filter: blur(12px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .promo-title {
        color: var(--text-dark);
        font-size: 28px;
        font-weight: 700;
        line-height: 1.3;
    }

    .promo-text {
        margin-top: 10px;
        color: #555;
        line-height: 1.5;
    }

    .promo-home {
        margin-top: 15px;
        display: inline-block;
        font-weight: bold;
        color: var(--peach);
        text-decoration: none;
    }

        .promo-home:hover {
            text-decoration: underline;
        }
  
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const inputs = document.querySelectorAll('.otp-box');
        inputs.forEach((input, idx) => {
            input.addEventListener('input', () => {
                if (input.value.length === 1 && idx < 5) inputs[idx + 1].focus();
            });
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !input.value && idx > 0) {
                    inputs[idx - 1].focus();
                }
            });
        });
        document.getElementById('copyEmail')?.addEventListener('click', () => {
            navigator.clipboard.writeText('@Model.Email');
            alert('Email copied to clipboard!');
        });
        inputs[0].focus();
    </script>
}