@page
@model ForgotPasswordConfirmation
@{
    // Title clearly states the required action
    ViewData["Title"] = "Password Reset Link Sent";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-7">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-body text-center p-md-5 p-4">

                    @* Main Icon: Key (indicating password reset) *@
                    <i class="bi bi-key-fill text-primary display-2 mb-4"></i>

                    <h1 class="display-5 fw-bold text-dark mb-3">
                        @ViewData["Title"]
                    </h1>

                    @* Primary Instruction Highlight *@
                    <div class="alert alert-info bg-light border-0 p-4 rounded-3 mb-4">
                        <p class="lead fw-medium mb-0">
                            We've sent a password reset link to the email address you provided.
                        </p>
                    </div>

                    <p class="fs-5 text-secondary">
                        Please check your inbox (and spam folder!) for an email from **Sweets** and follow the instructions to securely reset your password.
                    </p>

                    <p class="fs-6 text-muted mt-4">
                        *Note: If an account matching that email address exists, you will receive the reset link shortly.
                    </p>

                    <hr class="my-5">

                    @* Secondary Actions Section *@
                    <h3 class="h5 text-muted mb-3">What if I don't receive the email?</h3>
                    <p class="text-sm mb-4">
                        Wait a few minutes and try requesting the reset again. Ensure the email address was entered correctly.
                    </p>

                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">

                        @* 1. Go to Login Button (Main Action) *@
                        <a asp-page="./Login" class="btn btn-lg btn-primary shadow-sm">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Return to Login
                        </a>

                        @* 2. Go to Forgot Password Button (Retry) *@
                        <a asp-page="./ForgotPassword" class="btn btn-lg btn-outline-secondary shadow-sm">
                            <i class="bi bi-arrow-clockwise me-2"></i> Try Again
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>