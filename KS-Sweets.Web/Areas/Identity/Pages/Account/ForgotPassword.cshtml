@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    /* 🎨 COLOR CONSTANTS - COPIED FROM LOGIN.CSHTML */
    :root {
        --color-primary-dark: #6B4226;
        --color-secondary-light: #F8BBD0;
        --color-accent-dark: #C79E89;
        --color-bg-light: #FFF8F0;
        --color-accent-text: #E57373;
    }

    body {
        background-color: var(--color-bg-light);
        overflow-x: hidden;
    }

    .auth-card {
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        border: none;
        overflow: hidden;
    }

    .auth-card-header {
        background-color: var(--color-primary-dark) !important;
        color: white;
        padding: 25px 0;
        border-bottom: 7px solid var(--color-secondary-light);
    }

    .auth-card-body {
        padding: 40px !important;
    }

    /* ------------------------ BUTTONS AND EFFECTS ------------------------ */

    .btn-auth-primary {
        background-color: var(--color-primary-dark);
        border-color: var(--color-primary-dark);
        color: white;
        font-weight: 700;
        border-radius: 10px;
        padding: 12px 0;
        font-size: 1.15rem;
        transition: all 0.3s ease;
    }

        .btn-auth-primary:hover {
            background-color: #5A351D;
            border-color: #5A351D;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

    .auth-links a {
        color: var(--color-primary-dark);
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s;
    }

        .auth-links a:hover {
            color: var(--color-accent-text);
            text-decoration: underline;
        }

    .form-control:focus {
        border-color: var(--color-secondary-light) !important;
        box-shadow: 0 0 0 0.25rem rgba(248, 187, 208, 0.6) !important;
    }
</style>

<div class="row justify-content-center mt-5">
    <div class="col-12 col-sm-10 col-md-8 col-lg-7 col-xl-6">
        <div class="card auth-card">

            <div class="card-header auth-card-header text-center">
                <h3 class="py-1 mb-0 fw-bold">
                    <i class="bi bi-key-fill me-2"></i> @ViewData["Title"]
                </h3>
            </div>

            <div class="card-body auth-card-body">
                <div class="row">
                    <div class="col-12">
                        <h4 class="text-secondary text-center mb-5 fw-light">
                            Enter the email address associated with your account.
                        </h4>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4 text-center" role="alert"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label text-muted">Email Address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-4">
                                <button type="submit" class="w-100 btn btn-auth-primary">
                                    <i class="bi bi-send me-1"></i> Send Reset Link
                                </button>
                            </div>
                        </form>

                        <div class="auth-links text-center mt-4 pt-3 border-top">
                            <p class="mb-0">
                                Remembered your password?
                                <a asp-page="./Login" class="fw-bold">Go back to Login</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}