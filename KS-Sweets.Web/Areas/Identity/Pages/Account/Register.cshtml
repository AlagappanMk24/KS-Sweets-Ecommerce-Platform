@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="login-container">
    <div class="login-wrapper">
        <!-- LEFT PANEL -->
        <div class="left-panel">
            <div class="left-content">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div>
                        <h2 class="title">Create Account</h2>
                        <p class="subtitle">Join us and get 10% off your first order!</p>
                    </div>

                    <div class="logo-box ms-3">
                        <img src="~/images/ks-sweets.jpg" class="login-logo" alt="KS Sweets Logo" />
                    </div>
                </div>

                <form method="post" class="mt-4">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input asp-for="Input.Name" class="form-control input-box" placeholder="John Doe" />
                            <span asp-validation-for="Input.Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input asp-for="Input.Email" class="form-control input-box" placeholder="you@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label class="form-label">Password</label>
                            <input asp-for="Input.Password" type="password" class="form-control input-box pe-5" id="regPassword" placeholder="Enter your password" />
                            <span class="toggle-eye" onclick="togglePassword('regPassword', this)">
                                <i class="bi bi-eye"></i>
                            </span>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 position-relative">
                            <label class="form-label">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control input-box pe-5" id="regConfirmPassword" />
                            <span class="toggle-eye" onclick="togglePassword('regConfirmPassword', this)">
                                <i class="bi bi-eye"></i>
                            </span>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone Number</label>
                            <input asp-for="Input.PhoneNumber" class="form-control input-box" placeholder="+123 456 7890" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Street Address</label>
                            <input asp-for="Input.StreetAddress" class="form-control input-box" placeholder="Enter the Street Address" />
                            <span asp-validation-for="Input.StreetAddress" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">City</label>
                            <input asp-for="Input.City" class="form-control input-box" placeholder="Enter the City" />
                            <span asp-validation-for="Input.City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">State</label>
                            <input asp-for="Input.State" class="form-control input-box" placeholder="Enter the State" />
                            <span asp-validation-for="Input.State" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">PostalCode</label>
                            <input asp-for="Input.PostalCode" class="form-control input-box" placeholder="Enter the Postal Code" />
                            <span asp-validation-for="Input.PostalCode" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-login w-100 mt-4">Create Account</button>

                    <p class="text-center mt-4 text-muted">
                        Already have an account?
                        <a asp-page="./Login" class="fw-bold" style="color: var(--peach)">Log in here</a>
                    </p>
                </form>
            </div>
        </div>

        <!-- RIGHT PANEL - SAME AS LOGIN -->
        <div class="right-panel">
            <div class="promo-container">
                <div class="promo-badge">NEW ARRIVAL</div>
                <img class="promo-img"
                     src="https://images.unsplash.com/photo-1555507036-ab1f4038808a?w=800&q=80" />
                <div class="promo-content">
                    <h3 class="promo-title">Try Our New Chocolate Almond Croissant!</h3>
                    <p class="promo-text">
                        Indulge in the perfect harmony of rich chocolate and toasted almonds,
                        wrapped in our buttery, flaky croissant. A treat you won't forget!
                    </p>
                    <a href="/" class="promo-home">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SAME EXACT STYLES AS LOGIN -->
<style>
    :root {
        --peach: #ff8c5a;
        --peach-hover: #ff6b35;
        --text-dark: #2d1b0f;
        --cream: #fff7ed;
    }

    body {
        background: var(--cream);
        font-family: "Segoe UI", sans-serif;
    }

    .login-container {
        max-width: 1250px;
        margin: 40px auto;
        padding: 20px;
    }

    .login-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        background: #fff;
        border-radius: 26px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(255, 150, 100, 0.18);
    }

    .left-panel {
        padding: 60px 55px;
    }

    .title {
        font-size: 34px;
        font-weight: 700;
        color: var(--text-dark);
    }

    .subtitle {
        color: #777;
        margin-top: 8px;
    }


    .logo-box {
        width: 85px;
        height: 85px;
        border-radius: 50%;
        overflow: hidden;
        flex-shrink: 0;
        box-shadow: 0 5px 15px rgba(255, 140, 90, 0.25);
        border: 3px solid #ffe5d6;
    }

    .login-logo {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .input-box {
        padding: 14px 18px;
        border-radius: 14px;
        border: 2px solid #f3e8e2;
        transition: 0.3s;
    }

        .input-box:focus {
            border-color: var(--peach);
            box-shadow: 0 0 0 4px rgba(255, 140, 90, 0.25);
        }

    .btn-login {
        padding: 14px;
        background: var(--peach);
        color: white;
        border-radius: 14px;
        font-weight: 600;
        border: none;
        box-shadow: 0 8px 20px rgba(255, 120, 70, 0.35);
    }

        .btn-login:hover {
            background: var(--peach-hover);
            transform: translateY(-2px);
        }

    .divider {
        text-align: center;
        font-size: 0.9rem;
        color: #aaa;
        position: relative;
    }

        .divider::before {
            content: "";
            position: absolute;
            height: 1px;
            background: #eee;
            left: 0;
            right: 0;
            top: 50%;
        }

    .divider {
        z-index: 2;
        background: white;
        width: fit-content;
        padding: 0 10px;
        margin: 0 auto;
    }

    .right-panel {
        position: relative;
        overflow: hidden;
    }

    .promo-container {
        width: 100%;
        height: 100%;
        position: relative;
    }

    .promo-badge {
        position: absolute;
        top: 30px;
        left: 30px;
        background: white;
        color: var(--peach);
        padding: 10px 24px;
        font-weight: 700;
        border-radius: 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        z-index: 10;
    }

    .promo-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .promo-content {
        position: absolute;
        bottom: 40px;
        left: 40px;
        right: 40px;
        padding: 26px;
        background: rgba(255, 255, 255, 0.92);
        border-radius: 20px;
        backdrop-filter: blur(12px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .promo-title {
        color: var(--text-dark);
        font-size: 28px;
        font-weight: 700;
        line-height: 1.3;
    }

    .promo-text {
        margin-top: 10px;
        color: #555;
        line-height: 1.5;
    }

    .promo-home {
        margin-top: 15px;
        display: inline-block;
        font-weight: bold;
        color: var(--peach);
        text-decoration: none;
    }

        .promo-home:hover {
            text-decoration: underline;
        }


    .toggle-eye {
        position: absolute;
        right: 18px;
        top: calc(50% + 14px);
        transform: translateY(-50%);
        cursor: pointer;
        color: #888;
        font-size: 1.25em;
    }

        .toggle-eye:hover {
            color: var(--peach);
        }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(id, icon) {
            const input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
                icon.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                input.type = "password";
                icon.innerHTML = '<i class="bi bi-eye"></i>';
            }
        }
    </script>
}