@model Category

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-4">
                <img src="@Model.ImageUrl"
                     class="img-fluid rounded shadow"
                     style="max-height:280px; object-fit:cover;" />
            </div>

            <div class="col-md-8 p-4">
                <h2 class="fw-bold mb-3">@Model.Name</h2>

                <p class="text-muted mb-4">
                    @(string.IsNullOrEmpty(Model.Description)
                                        ? "No description provided."
                                        : Model.Description)
                </p>

                <div class="d-flex gap-3 mb-4">
                    <span class="badge bg-primary fs-6">Items: @Model.ItemCount</span>
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">Created On</small>
                        <p class="fw-semibold">@Model.CreatedAt.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">Last Updated</small>
                        <p class="fw-semibold">@Model.UpdatedAt?.ToString("dd MMM yyyy")</p>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="/admin/categories" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Categories
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
