@using KS_Sweets.Domain.Entities
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Home - KS-Sweets Boutique";
}

<style>
    /* New Global Color Variables for easy theme adjustments */
    :root {
        --color-primary: #8C4B3D; /* Deep Rose/Brown for emphasis */
        --color-secondary: #E3B5A7; /* Soft Rose for accents */
        --color-tertiary: #5C4033; /* Rich Brown for text/buttons */
        --color-background-light: #F8F4F2; /* Creamy light background */
        --color-text-dark: #333;
        --color-star: #FFC300;
    }

    /* 🌸 SECTION DIVIDERS (More complex, softer waves) */
    .section-divider-wave-top {
        background-color: var(--color-background-light);
        height: 100px; /* Taller divider */
        clip-path: polygon(0 0, 100% 70%, 100% 100%, 0 100%); /* New Wave-like Clip Path (Trapezoid with slant) */
        margin-top: -1px;
    }

    .section-divider-wave-bottom {
        background-color: var(--color-background-light);
        height: 100px;
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 30%); /* Inverted Wave-like Clip Path */
        margin-bottom: -1px;
    }

    /* 🌸 HERO SECTION - Overhauled */
    .hero-section {
        background: linear-gradient(135deg, #FFD6A5, #F7B7A3); /* Soft, inviting gradient */
        min-height: 90vh;
        border-radius: 0 0 100px 100px; /* Very large bottom radius */
        background-image: url('/images/hero-bg-pattern-subtle.png');
        background-size: cover;
        background-position: center bottom; /* Better positioning */
        background-blend-mode: soft-light;
        animation: hero-fade-in 1.8s ease-out; /* Slower, elegant animation */
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        padding-top: 50px; /* Space from top */
    }

    .hero-content {
        max-width: 900px;
        padding: 50px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 30px;
        backdrop-filter: blur(3px); /* Subtle blur effect */
        border: 1px solid rgba(255, 255, 255, 0.4);
    }

    .display-3 {
        font-size: 4rem;
        color: var(--color-tertiary);
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.15);
    }

    .brand-emphasis {
        color: var(--color-primary);
        font-style: italic;
    }

    .hero-lead {
        font-weight: 300;
        font-size: 1.4rem;
        color: var(--color-tertiary);
    }

    .btn-hero {
        background-color: var(--color-tertiary);
        color: #fff;
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        border: 2px solid #fff; /* White border for pop */
        box-shadow: 0 10px 20px rgba(92, 64, 51, 0.5);
        padding: 15px 35px; /* Bigger button */
        transition: all 0.3s ease;
    }

        .btn-hero:hover {
            background-color: var(--color-primary);
            transform: scale(1.05) translateY(-5px);
            box-shadow: 0 15px 30px rgba(92, 64, 51, 0.6);
        }

    /* 🍬 CATEGORY SECTION - NEW CIRCULAR DESIGN */
    .section-title {
        color: var(--color-tertiary);
        font-family: 'Playfair Display', serif;
        font-size: 3rem;
        margin-bottom: 20px !important;
    }

        .section-title::after {
            content: "— Sweet Delights —"; /* Descriptive separator */
            color: var(--color-secondary);
            font-size: 1.2rem;
            letter-spacing: 2px;
            margin: 10px auto 0;
            display: block;
            font-family: sans-serif;
            font-weight: 400;
        }

    .category-circle-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 10px;
    }

    .category-circle {
        width: 180px; /* Base size */
        height: 180px; /* Base size */
        border-radius: 50%;
        overflow: hidden;
        border: 8px solid var(--color-secondary); /* Elegant accent border */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        margin-bottom: 15px;
        transition: all 0.4s ease;
        position: relative;
    }

        .category-circle:hover {
            transform: scale(1.1);
            border-color: var(--color-primary); /* Primary color on hover */
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

        .category-circle img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures the whole image is seen within the circle */
            transition: transform 0.4s ease;
        }

        .category-circle:hover img {
            transform: scale(1.05); /* Subtle zoom on hover */
        }

    .card-title {
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--color-primary);
        text-transform: capitalize;
        letter-spacing: 0;
        margin-bottom: 10px;
    }

    .btn-view {
        background-color: var(--color-primary);
        color: #ffffff;
        font-weight: 500;
        border-radius: 20px;
        padding: 8px 25px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.25);
    }

        .btn-view:hover {
            background-color: var(--color-tertiary);
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
        }

    /* 💬 FEEDBACK SECTION - Refined */
    .feedback-section {
        background: #FFF5EC;
    }

    .feedback-card {
        background-color: #ffffff;
        border-radius: 25px;
        padding: 40px;
        max-width: 650px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-left: 5px solid var(--color-secondary);
        min-height: 320px;
        transition: all 0.3s ease;
    }

        .feedback-card:hover {
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        }

    .feedback-icon i {
        font-size: 2.5rem !important;
        color: var(--color-secondary) !important;
    }

    .text-brown {
        color: var(--color-tertiary);
        font-size: 1.2rem;
    }

    .stars i {
        color: var(--color-star) !important; /* Gold stars */
    }

    .carousel-indicators button {
        background-color: var(--color-secondary) !important;
    }

    .carousel-indicators .active {
        background-color: var(--color-primary) !important;
    }

    /* 💎 NEW SECTION STYLES */
    .feature-icon {
        color: var(--color-primary);
        font-size: 3rem;
        margin-bottom: 15px;
        transition: transform 0.3s ease;
    }

    .feature-box:hover .feature-icon {
        transform: rotateY(180deg);
    }

    .story-content {
        background-color: #fcfcfc;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .promo-card {
        background: linear-gradient(45deg, var(--color-primary), #E3B5A7);
        color: white;
        padding: 40px;
        border-radius: 20px;
        transition: transform 0.4s ease;
    }

        .promo-card:hover {
            transform: scale(1.03);
        }

    .new-release-img {
        border-radius: 15px;
        object-fit: cover;
        height: 300px;
        width: 100%;
        transition: all 0.5s ease;
    }

    .new-release-card:hover .new-release-img {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
    }

    .hover-grow {
        transition: transform 0.3s ease;
    }

        .hover-grow:hover {
            transform: scale(1.05);
        }

    @@keyframes hero-fade-in {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
    /* Media queries remain functional */
    @@media (max-width: 768px) {
        .display-3 {
            font-size: 3rem;
        }

        .hero-lead {
            font-size: 1.1rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .section-divider-wave-top, .section-divider-wave-bottom {
            height: 60px;
        }

        .feedback-card {
            min-height: 250px;
        }

        .category-circle {
            width: 150px; /* Smaller circle on mobile */
            height: 150px;
            border-width: 5px;
        }
    }
</style>

