    </div>
</section>

<div class="section-divider-wave-top" style="background-color: #FFF5EC;"></div>

@if (ViewBag.Feedbacks != null && ViewBag.Feedbacks.Count > 0)
{
    <section class="feedback-section py-5 my-0" style="background-color: #FFF5EC;">
        <div class="container text-center py-4">
            <h2 class="fw-bold mb-5 section-title" data-aos="fade-down" style="color: var(--color-tertiary);">
                What Our Customers Say <i class="bi bi-chat-dots-fill"></i>
            </h2>

            <div id="feedbackCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="6000">
                <div class="carousel-inner">
                    @for (int i = 0; i < ViewBag.Feedbacks.Count; i++)
                    {
                        var fb = ViewBag.Feedbacks[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="feedback-card mx-auto" data-aos="zoom-in" data-aos-delay="200">
                                <div class="feedback-icon mb-4">
                                    <i class="bi bi-quote"></i>
                                </div>

                                <p class="fs-4 fst-italic text-dark mb-4 px-lg-5">“@fb.Comment”</p>
                                <div class="stars mb-3">
                                    @for (int r = 0; r < 5; r++)
                                    {
                                        if (r < fb.Rating)
                                        {
                                            <i class="bi bi-star-fill" style="font-size:1.4rem;"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-muted" style="font-size:1.4rem;"></i>
                                        }
                                    }
                                </div>
                                <p class="fw-bold text-brown mb-1 mt-3">@fb.Name</p>
                                <small class="text-muted fst-normal">@fb.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    }
                </div>
                <div class="carousel-indicators position-relative mt-5">
                    @for (int i = 0; i < ViewBag.Feedbacks.Count; i++)
                    {
                        <button type="button" data-bs-target="#feedbackCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="prev">
                    <span class="bi bi-chevron-left" aria-hidden="true" style="color: var(--color-tertiary); font-size: 3rem;"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#feedbackCarousel" data-bs-slide="next">
                    <span class="bi bi-chevron-right" aria-hidden="true" style="color: var(--color-tertiary); font-size: 3rem;"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>
}


